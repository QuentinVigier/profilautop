{% extends 'base.html.twig' %}

{% block title %}Hello JobOfferController!{% endblock %}

{% block body %}
    <header class="py-5 mb-16 md:py-16 bg-gradient-to-r from-violet-100 via-slate-100 to-indigo-100">
        <div class="px-4 mx-auto text-center sm:max-w-screen-sm md:max-w-screen-lg">
            <h1 class="mb-4 text-4xl font-bold md:text-5xl">Your Jobs Offers</h1>
            <a href="{{ path('app_job_offer_new') }}" class="text-2xl self-end px-3 py-2 transition-all duration-200 ease-in-out rounded-md bg-violet-100 hover:bg-violet-200 w-fit">
                Create a new Job Offer
            </a>
        </div>
    </header>

    {% if jobs is empty %}
        <div class="text-center">
            <p class="mb-5 text-violet-950">
                You haven't created any Job Offer yet
            </p>
        </div>
    {% else %}
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
            {% for job in jobs %}
                <div class="p-6 bg-white rounded-lg shadow-md">
                    <a href="{{ path('app_job_offer_show', {'id': job.id}) }}" class="block">
                        <h2 class="mb-2 text-xl font-bold">{{ job.title }} at {{ job.company }}</h2>
                    </a>
                    <div class="flex justify-between mt-4">
                        <a href="{{ path('app_job_offer_edit', {'id': job.id}) }}" class="px-3 py-2 text-sm font-medium text-white transition-all duration-200 ease-in-out bg-indigo-600 rounded-md hover:bg-indigo-700">
                            Edit
                        </a>
                        <a href="{{ path('app_job_offer_delete', {'id': job.id}) }}" class="px-3 py-2 text-sm font-medium text-white transition-all duration-200 ease-in-out bg-red-600 rounded-md hover:bg-red-700">
                            Delete
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}