{% extends 'base.html.twig' %}

{% block title %}ProfilAuTop - Edit Job Offer{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
    <div class="relative py-3 sm:max-w-xl sm:mx-auto w-4/5 md:w-3/4 lg:w-2/3">
        <div class="absolute inset-0 bg-gradient-to-r from-indigo-700 to-purple-600 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl"></div>
        <div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-20">
            <div class="max-w-md mx-auto">
                <div>
                    <h1 class="text-2xl font-semibold text-center text-indigo-700 mb-6">Edit Job Offer</h1>
                </div>
                <div class="divide-y divide-gray-200">
                    {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
                        {% for field in form %}
                            <div class="pt-4">
                                {{ form_label(field, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                {{ form_widget(field, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
                            </div>
                        {% endfor %}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}