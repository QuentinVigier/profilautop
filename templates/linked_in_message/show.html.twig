{% extends 'base.html.twig' %}

{% block title %}LinkedIn Message Details{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto mt-10 bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="px-6 py-4">
        <h1 class="text-2xl font-bold text-gray-800 mb-4">LinkedIn Message Details</h1>
        
        <div class="mb-4">
            <p class="text-sm font-semibold text-gray-600">Content</p>
            <p class="text-gray-800 whitespace-pre-wrap">{{ message.content }}</p>
        </div>
        
        <div class="mb-4">
            <p class="text-sm font-semibold text-gray-600">Created At</p>
            <p class="text-gray-800">{{ message.createdAt|date('Y-m-d H:i:s') }}</p>
        </div>
        
        <div class="mb-4">
            <p class="text-sm font-semibold text-gray-600">Last Updated</p>
            <p class="text-gray-800">{{ message.updatedAt|date('Y-m-d H:i:s') }}</p>
        </div>
        
        <div class="mb-4">
            <p class="text-sm font-semibold text-gray-600">Related Job Offer</p>
            <p class="text-gray-800">{{ message.jobOffer.title }} at {{ message.jobOffer.company }}</p>
        </div>
        
        <div class="mb-4">
            <p class="text-sm font-semibold text-gray-600">Created By</p>
            <p class="text-gray-800">{{ message.appUser.email }}</p>
        </div>
    </div>
    
    <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
        <a href="{{ path('app_job_offer') }}" class="inline-block px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition duration-300">
            Back to List
        </a>
    </div>
</div>
{% endblock %}